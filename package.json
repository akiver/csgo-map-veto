{
  "name": "csgo-map-veto",
  "version": "1.0.0",
  "description": "An app to do CSGO map veto.",
  "license": "GPL-2.0",
  "author": "AkiVer",
  "homepage": "https://github.com/akiver/csgo-map-veto",
  "repository": {
    "type": "git",
    "url": "https://github.com/akiver/csgo-map-veto.git"
  },
  "main": "main.js",
  "scripts": {
    "build-main": "cross-env NODE_ENV=production node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.main.prod.js --progress --profile --colors",
    "build-renderer": "cross-env NODE_ENV=production node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.renderer.prod.js --progress --profile --colors",
    "build": "concurrently \"npm run build-main\" \"npm run build-renderer\"",
    "build:web": "node --trace-warnings -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.web.js --progress --profile --colors",
    "dev": "cross-env START_HOT=1 npm run hot-updates-server",
    "eslint": "./node_modules/eslint/bin/eslint.js .",
    "hot-updates-server": "cross-env NODE_ENV=development node --trace-warnings -r babel-register ./node_modules/webpack-dev-server/bin/webpack-dev-server --config webpack.config.dev.js",
    "pack": "npm run build && build --dir",
    "release": "npm run build && build",
    "start": "cross-env NODE_ENV=production electron .",
    "start-hot-renderer": "cross-env HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./app/main.dev"
  },
  "dependencies": {
    "bulma": "^0.4.0",
    "electron-is": "^2.4.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.3",
    "react-select": "^1.0.0-rc.3",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-es2015-classes": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.0",
    "babili-webpack-plugin": "0.0.11",
    "concurrently": "^3.4.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "electron": "^1.6.2",
    "electron-builder": "16.5.1",
    "electron-devtools-installer": "^2.1.0",
    "eslint": "^3.18.0",
    "eslint-plugin-react": "^6.10.3",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "sass-loader": "^6.0.3",
    "shelljs": "^0.7.7",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0"
  },
  "build": {
    "appId": "com.electron.csgomapveto",
    "productName": "CSGO Map Veto",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "files": [
      "app/dist/",
      "node_modules/",
      "index.html",
      "main.js",
      "main.js.map",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "keywords": [
    "csgo",
    "electron"
  ],
  "devEngines": {
    "node": ">=6.x",
    "npm": ">=3.x",
    "yarn": "0.21.3"
  }
}
